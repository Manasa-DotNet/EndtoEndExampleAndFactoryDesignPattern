
@model IEnumerable<Employee.Model.Employee>
@{
    ViewBag.Title = "Index";
}

<h4>All Employees</h4>
<div class="row">
    <div class="col-10"></div>
    <div class="col-2"> @Html.ActionLink("Add Employee", "Create", "Employee", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })</div>

</div>

<div class="row">&nbsp;</div>
@if (Model != null)
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>State</th>
            <th>City</th>
            <th>Gender</th>
            <th colspan="2">Actions</th>
        </tr>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.FirstName</td>
                <td>@d.LastName</td>
                <td>@d.State</td>
                <td>@d.City</td>
                <td>@d.Gender</td>
                <td>
                    <button class="btn btn-primary" onclick="editEmployee(@d.Id)">Edit</button>
                </td>
                <td> <button class="btn btn-primary" onclick="deleteEmployee(@d.Id,'@d.FirstName')">Delete</button></td>
            </tr>
        }

    </table>
}
<br />
<div id="editForm"></div>

